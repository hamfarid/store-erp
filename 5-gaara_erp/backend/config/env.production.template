# =============================================================================
# üî¥ REQUIRED - PRODUCTION CRITICAL
# =============================================================================

# Flask Application Secret (MUST be unique for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_PRODUCTION_SECRET_KEY_32_CHARS_MIN

# JWT Secret Keys (MUST be unique for production)
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY_32_CHARS_MIN
JWT_REFRESH_SECRET_KEY=CHANGE_ME_JWT_REFRESH_SECRET_KEY_32_CHARS_MIN

# Production Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://gaara_user:CHANGE_ME@localhost:10502/gaara_erp_prod

# =============================================================================
# üü† PRODUCTION RECOMMENDED
# =============================================================================

# Production Redis
REDIS_URL=redis://localhost:6375/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6375/0
CELERY_RESULT_BACKEND=redis://localhost:6375/0

# Environment MUST be production
FLASK_ENV=production

# Debug MUST be False in production
DEBUG=False

# =============================================================================
# üîí PRODUCTION SECURITY
# =============================================================================

# JWT Token Expiration (Production values)
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRES_DAYS=7

# Rate Limiting (Strict for production)
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=30 per minute
RATELIMIT_STORAGE_URL=redis://localhost:6375/1

# CORS (Production domains only)
CORS_ORIGINS=https://erp.company.com,https://www.company.com

# Session Security (HTTPS required)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# =============================================================================
# üåê PRODUCTION PORTS
# =============================================================================

BACKEND_PORT=5001
FRONTEND_PORT=5501
ML_PORT=5101
AI_PORT=5601
POSTGRES_PORT=10502
REDIS_PORT=6375

# =============================================================================
# ü§ñ AI SERVICES - PRODUCTION KEYS
# =============================================================================

# ‚ö†Ô∏è USE PRODUCTION API KEYS ONLY ‚ö†Ô∏è
OPENAI_API_KEY=sk-prod-CHANGE_ME
ANTHROPIC_API_KEY=sk-ant-prod-CHANGE_ME
PYBROPS_API_KEY=prod-CHANGE_ME

# =============================================================================
# üìß PRODUCTION EMAIL
# =============================================================================

MAIL_SERVER=smtp.company.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=noreply@company.com
MAIL_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
MAIL_DEFAULT_SENDER=noreply@company.com

# =============================================================================
# üì± PRODUCTION TELEGRAM
# =============================================================================

TELEGRAM_BOT_TOKEN=CHANGE_ME_PROD_BOT_TOKEN
TELEGRAM_CHAT_ID=CHANGE_ME_PROD_CHAT_ID

# =============================================================================
# üìä PRODUCTION MONITORING
# =============================================================================

LOG_LEVEL=WARNING
LOG_FILE=/var/log/gaara_erp/production.log
LOG_MAX_BYTES=52428800  # 50MB
LOG_BACKUP_COUNT=10

# Sentry Production DSN
SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID

# Prometheus
