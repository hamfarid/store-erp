# ============================================
# Store ERP System - Environment Configuration
# نظام إدارة المتجر - إعدادات البيئة
# ============================================

# IMPORTANT: Copy this file to .env and update all values
# مهم: انسخ هذا الملف إلى .env وحدث جميع القيم

# ============================================
# APPLICATION SETTINGS
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True
APP_NAME=Store ERP System
APP_VERSION=1.5.0

# ============================================
# SECURITY - CRITICAL: CHANGE ALL SECRETS!
# ============================================
# Generate secure keys using: python -c "import secrets; print(secrets.token_hex(32))"

# Secret key for Flask sessions (min 32 chars)
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MIN_32_CHARS

# JWT secret key for token signing (min 32 chars)
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_JWT_SECRET_KEY_MIN_32_CHARS

# JWT token expiration (in minutes)
JWT_ACCESS_TOKEN_EXPIRES=30
JWT_REFRESH_TOKEN_EXPIRES=10080

# Password hashing algorithm (argon2id recommended)
PASSWORD_HASH_ALGORITHM=argon2id

# ============================================
# DATABASE SETTINGS
# ============================================
# Development: SQLite
DATABASE_URL=sqlite:///instance/inventory.db

# Production: PostgreSQL (recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/store_erp

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================
# SERVER SETTINGS
# ============================================
HOST=127.0.0.1
PORT=8000

# ============================================
# CORS SETTINGS
# ============================================
# Development: Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3004,http://localhost:5173

# Production: HTTPS only!
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# SECURITY SETTINGS
# ============================================
# Session timeout (minutes)
SESSION_TIMEOUT=30

# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration (minutes)
LOCKOUT_DURATION=15

# Enable MFA (Multi-Factor Authentication)
MFA_ENABLED=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60 per minute
RATE_LIMIT_LOGIN=10 per minute

# ============================================
# CACHING
# ============================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Redis cache (production)
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0

# ============================================
# EMAIL SETTINGS
# ============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# ============================================
# CELERY SETTINGS (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=52428800
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,xlsx,xls,csv

# ============================================
# BACKUP SETTINGS
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION=30
BACKUP_PATH=backups

# ============================================
# API SETTINGS
# ============================================
API_RATE_LIMIT=1000 per hour
API_TIMEOUT=30

# ============================================
# REPORTS
# ============================================
REPORTS_CACHE_TIMEOUT=300
REPORTS_MAX_RECORDS=10000

# ============================================
# LOCALIZATION
# ============================================
TIMEZONE=Asia/Riyadh
LANGUAGE=ar
CURRENCY=SAR

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Skip blueprint loading for testing
SKIP_BLUEPRINTS=0

# Enable SQL query logging
SQLALCHEMY_ECHO=false

# Enable profiling
PROFILING_ENABLED=false

# ============================================
# SENTRY (Error Monitoring)
# ============================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Use strong, unique secrets for production
# 3. Enable HTTPS in production
# 4. Use PostgreSQL for production (not SQLite)
# 5. Enable MFA for admin accounts
# 6. Set up proper backup strategy
# 7. Monitor logs regularly
# 8. Keep dependencies updated

