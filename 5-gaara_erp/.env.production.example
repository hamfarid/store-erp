# ============================================
# Store ERP - Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control

# ==================== APPLICATION ====================
VERSION=1.0.0
BUILD_DATE=2025-11-08
VCS_REF=main
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=0

# ==================== DATABASE ====================
POSTGRES_DB=store_db
POSTGRES_USER=store_user
POSTGRES_PASSWORD=changeme-strong-password-here
POSTGRES_PORT=5432

# ==================== REDIS ====================
REDIS_PASSWORD=changeme-strong-password-here
REDIS_PORT=6379

# ==================== BACKEND ====================
BACKEND_PORT=5000
SECRET_KEY=changeme-strong-secret-key-here-min-32-chars
JWT_SECRET_KEY=changeme-strong-jwt-secret-here-min-32-chars
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==================== FRONTEND ====================
FRONTEND_PORT=80
VITE_API_URL=https://api.yourdomain.com

# ==================== SECURITY ====================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn-here

# Vault (Secrets Management)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your-vault-token-here

# ==================== MONITORING ====================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme-strong-password-here

# ==================== DEPLOYMENT ====================
# Server
SERVER_HOST=your-server-ip-or-domain
SERVER_USER=deploy
SERVER_SSH_KEY_PATH=~/.ssh/id_rsa

# Domain
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# ==================== BACKUP ====================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# ==================== RESOURCE LIMITS ====================
# Backend
BACKEND_CPU_LIMIT=2
BACKEND_MEMORY_LIMIT=2G
BACKEND_CPU_RESERVATION=1
BACKEND_MEMORY_RESERVATION=1G

# Frontend
FRONTEND_CPU_LIMIT=1
FRONTEND_MEMORY_LIMIT=512M
FRONTEND_CPU_RESERVATION=0.5
FRONTEND_MEMORY_RESERVATION=256M

# Database
POSTGRES_CPU_LIMIT=2
POSTGRES_MEMORY_LIMIT=2G
POSTGRES_CPU_RESERVATION=1
POSTGRES_MEMORY_RESERVATION=1G

# Redis
REDIS_CPU_LIMIT=1
REDIS_MEMORY_LIMIT=512M
REDIS_CPU_RESERVATION=0.5
REDIS_MEMORY_RESERVATION=256M

