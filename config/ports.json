{
  "application": {
    "name": "Store Management System",
    "version": "1.6.0",
    "description": "Inventory and ERP solution for agricultural stores"
  },
  "services": {
    "backend": {
      "name": "Backend Flask API",
      "port": 6001,
      "host": "0.0.0.0",
      "url": "http://localhost:6001",
      "docker_service": "store-backend"
    },
    "frontend": {
      "name": "Frontend React App",
      "port": 6501,
      "host": "0.0.0.0",
      "url": "http://localhost:6501",
      "docker_service": "store-frontend"
    },
    "ml": {
      "name": "ML Service",
      "port": 6101,
      "host": "0.0.0.0",
      "url": "http://localhost:6101",
      "docker_service": "store-ml",
      "comment": "Machine Learning / AI analysis"
    },
    "ai": {
      "name": "AI Chatbot Service",
      "port": 6601,
      "host": "0.0.0.0",
      "url": "http://localhost:6601",
      "docker_service": "store-ai",
      "comment": "AI chatbot and assistant"
    },
    "redis": {
      "name": "Redis Cache",
      "port": 6379,
      "host": "localhost"
    },
    "database": {
      "name": "PostgreSQL Database",
      "port": 5432,
      "host": "localhost",
      "development": "SQLite (instance/store.db)"
    }
  },
  "cors": {
    "allowed_origins": [
      "http://localhost:6501",
      "http://127.0.0.1:6501",
      "http://localhost:5173",
      "http://127.0.0.1:5173"
    ]
  },
  "api": {
    "prefix": "/api",
    "timeout": 30000,
    "retry_attempts": 3
  },
  "nginx": {
    "source": "D:\\Ai_Project\\nginx\\conf.d.backup\\store.conf",
    "note": "Port configuration synced from nginx"
  }
}
