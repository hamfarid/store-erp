{
  "application": {
    "name": "Store Management System",
    "version": "1.5.0"
  },
  "services": {
    "frontend": {
      "name": "Frontend React App",
      "port": 5505,
      "host": "0.0.0.0",
      "url": "http://localhost:5505"
    },
    "backend": {
      "name": "Backend Flask API",
      "port": 5506,
      "host": "0.0.0.0",
      "url": "http://localhost:5506"
    },
    "redis": {
      "name": "Redis Cache",
      "port": 5606,
      "host": "localhost",
      "comment": "Backend port + 100"
    },
    "database": {
      "name": "PostgreSQL/SQLite Database",
      "port": 5605,
      "host": "localhost",
      "comment": "Frontend port + 100"
    }
  },
  "cors": {
    "allowed_origins": [
      "http://localhost:5505",
      "http://127.0.0.1:5505",
      "http://localhost:3000"
    ]
  },
  "api": {
    "prefix": "/api",
    "timeout": 30000,
    "retry_attempts": 3
  }
}

