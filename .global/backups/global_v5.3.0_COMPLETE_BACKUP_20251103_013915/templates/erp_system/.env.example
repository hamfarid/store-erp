# ERP System Environment Variables

# Project
PROJECT_NAME={{PROJECT_NAME}}
PROJECT_SLUG={{PROJECT_SLUG}}

# Django
SECRET_KEY={{SECRET_KEY}}
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME={{DATABASE_NAME}}
DB_USER={{DATABASE_USER}}
DB_PASSWORD={{DATABASE_PASSWORD}}
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:{{REDIS_PORT}}/0

# Celery
CELERY_BROKER_URL=redis://redis:{{REDIS_PORT}}/0
CELERY_RESULT_BACKEND=redis://redis:{{REDIS_PORT}}/0

# Frontend
REACT_APP_API_URL=http://localhost:{{BACKEND_PORT}}/api
REACT_APP_PROJECT_NAME={{PROJECT_NAME}}

# Ports
FRONTEND_PORT={{FRONTEND_PORT}}
BACKEND_PORT={{BACKEND_PORT}}
REDIS_PORT={{REDIS_PORT}}

# Admin
DJANGO_SUPERUSER_EMAIL={{ADMIN_EMAIL}}
DJANGO_SUPERUSER_PASSWORD={{ADMIN_PASSWORD}}
DJANGO_SUPERUSER_USERNAME=admin

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Security
CORS_ALLOWED_ORIGINS=http://localhost:{{FRONTEND_PORT}}
CSRF_TRUSTED_ORIGINS=http://localhost:{{BACKEND_PORT}}

# Logging
LOG_LEVEL=INFO

# Features
ENABLE_MULTI_WAREHOUSE=True
ENABLE_MULTI_CURRENCY=True
ENABLE_REPORTING=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_BARCODE_SCANNING=True

