# =============================================================================
# Store ERP - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your configuration
# DO NOT commit .env to version control!
# =============================================================================

# Application Environment
FLASK_ENV=production
FLASK_DEBUG=0

# Database Configuration
DB_NAME=store_production
DB_USER=store_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_HOST=database
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_HOST=redis
REDIS_PORT=6379

# Security Keys (Generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=CHANGE_ME_SECRET_KEY_HERE
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_HERE
SECURITY_PASSWORD_SALT=CHANGE_ME_SALT_HERE

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring (Grafana)
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Application Settings
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Performance
WORKERS=4
THREADS=2
WORKER_CLASS=gthread
TIMEOUT=120

# Security Headers
X_FRAME_OPTIONS=DENY
CONTENT_SECURITY_POLICY=default-src 'self'
