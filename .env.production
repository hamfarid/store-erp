# -*- env -*-
# FILE: .env.production | PURPOSE: Production Environment Variables | OWNER: DevOps | RELATED: docker-compose.prod.yml | LAST-AUDITED: 2025-10-21

# =============================================================================
# متغيرات البيئة للإنتاج - نظام إدارة المخزون العربي
# Production Environment Variables - Arabic Inventory Management System
# =============================================================================

# إعدادات قاعدة البيانات
# Database Configuration
DB_NAME=store_production
DB_USER=store_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#
DB_HOST=database
DB_PORT=5432

# إعدادات Redis
# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!@#
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# مفاتيح الأمان (يجب تغييرها في الإنتاج)
# Security Keys (MUST be changed in production)
SECRET_KEY=CHANGE_THIS_SUPER_SECRET_KEY_789!@#$%^&*()
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_ABC!@#$%^&*()
SECURITY_PASSWORD_SALT=CHANGE_THIS_PASSWORD_SALT_DEF!@#$%^&*()

# إعدادات Flask
# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_APP=app.py

# إعدادات البريد الإلكتروني
# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# إعدادات الملفات المرفوعة
# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# إعدادات الجلسات
# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# إعدادات الأمان
# Security Configuration
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600
BCRYPT_LOG_ROUNDS=12

# إعدادات المراقبة
# Monitoring Configuration
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_GHI!@#

# إعدادات النسخ الاحتياطي
# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_BACKUP_KEY_JKL!@#

# إعدادات الشبكة
# Network Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# إعدادات SSL/TLS
# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# إعدادات التسجيل
# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# إعدادات الأداء
# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000

# إعدادات التخزين المؤقت
# Caching Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=store_

# إعدادات المهام المجدولة
# Scheduled Tasks Configuration
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/2

# إعدادات التحليلات
# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# إعدادات التنبيهات
# Alerts Configuration
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@your-domain.com,alerts@your-domain.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# إعدادات النظام
# System Configuration
TIMEZONE=UTC
LANGUAGE=ar
CURRENCY=USD
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S

# =============================================================================
# ملاحظات مهمة للإنتاج:
# Important Production Notes:
# 
# 1. يجب تغيير جميع كلمات المرور والمفاتيح السرية
#    All passwords and secret keys MUST be changed
#
# 2. استخدم كلمات مرور قوية ومعقدة
#    Use strong and complex passwords
#
# 3. قم بتفعيل HTTPS في الإنتاج
#    Enable HTTPS in production
#
# 4. راجع إعدادات الأمان بانتظام
#    Review security settings regularly
#
# 5. احتفظ بنسخة احتياطية من هذا الملف في مكان آمن
#    Keep a backup of this file in a secure location
