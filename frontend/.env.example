# API Configuration
VITE_API_BASE_URL=http://localhost:5002
VITE_API_TIMEOUT=30000

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG=true

# Application Configuration
VITE_APP_NAME=نظام إدارة المخزون
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=نظام إدارة المخزون المتقدم للمؤسسات الزراعية

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_COLOR=#3B82F6

# Features Configuration
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_OFFLINE_MODE=false

# Security Configuration
VITE_ENABLE_HTTPS=false
VITE_CSRF_PROTECTION=true

# Performance Configuration
VITE_ENABLE_PWA=false
VITE_CACHE_DURATION=3600000

# Localization Configuration
VITE_DEFAULT_LANGUAGE=ar
VITE_SUPPORTED_LANGUAGES=ar,en

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=xlsx,xls,csv,pdf,jpg,jpeg,png

# Map Configuration (if needed)
VITE_MAP_API_KEY=your-map-api-key-here
VITE_DEFAULT_LOCATION_LAT=30.0444
VITE_DEFAULT_LOCATION_LNG=31.2357

# Social Media Configuration (if needed)
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# Development Tools
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
