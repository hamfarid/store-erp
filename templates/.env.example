# FILE: templates/.env.example
# PURPOSE: قالب ملف المتغيرات البيئية
# OWNER: Global Team
# LAST-AUDITED: 2025-10-21

# ========================================
# Project Configuration
# ========================================
PROJECT_NAME=my_project
NODE_ENV=development
DEBUG=true

# ========================================
# Server Configuration
# ========================================
FRONTEND_PORT=3000
BACKEND_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dbname
DB_USER=user
DB_PASSWORD=change-me-in-production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ========================================
# Security & Authentication
# ========================================
SECRET_KEY=change-me-to-random-string-in-production
JWT_SECRET=change-me-to-random-string-in-production
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800
ENCRYPTION_KEY=change-me-in-production

# ========================================
# API Configuration
# ========================================
API_URL=http://localhost:8000
API_VERSION=v1
API_RATE_LIMIT=100

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_ALLOW_CREDENTIALS=true

# ========================================
# Email Configuration (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ========================================
# External Services
# ========================================
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# ========================================
# Monitoring & Analytics
# ========================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ========================================
# Feature Flags
# ========================================
ENABLE_REGISTRATION=true
ENABLE_MFA=false
ENABLE_PWA=false
ENABLE_RAG=false

# ========================================
# Performance
# ========================================
CACHE_TTL=3600
SESSION_TTL=86400
MAX_CONNECTIONS=100

# ========================================
# Security Headers
# ========================================
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY

# ========================================
# NOTES
# ========================================
# 1. نسخ هذا الملف إلى .env وتعديل القيم
# 2. لا ترفع ملف .env إلى Git أبداً
# 3. استخدم قيم عشوائية قوية للـ secrets في الإنتاج
# 4. راجع docs/Security.md للمزيد من التفاصيل
# 5. استخدم KMS أو Vault لإدارة الأسرار في الإنتاج



# ========================================
# Backend Alignment (Flask app)
# Variables accepted by backend code (auth, limiter, cookies)
# ========================================
# API base URL used in OpenAPI server list
API_BASE_URL=http://localhost:5002

# JWT settings (backend also supports these alternatives)
JWT_SECRET_KEY=change-me-to-random-string-in-production
JWT_ACCESS_TTL_MIN=15        # minutes (preferred in backend)
JWT_REFRESH_TTL_DAYS=7       # days (preferred in backend)
# Legacy/alternative (seconds) accepted by docs/tools
# JWT_ACCESS_TOKEN_EXPIRES=900
# JWT_REFRESH_TOKEN_EXPIRES=604800

# Rate limiting defaults and storage backend
API_RATE_LIMIT_DEFAULT=100 per hour
# If set, Flask-Limiter will use this storage (recommended: Redis)
LIMITER_STORAGE_URI=redis://localhost:6379/0
# Or rely on REDIS_URL if already set
# REDIS_URL=redis://localhost:6379/0

# CSRF & cookies
ENABLE_CSRF=0
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=0  # set 1 in production
