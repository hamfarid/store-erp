# متغيرات البيئة لنظام Gaara Scan AI
# Environment Variables for Gaara Scan AI System

# ==========================================
# إعدادات قاعدة البيانات
# Database Settings
# ==========================================
POSTGRES_DB=gaara_scan_ai
POSTGRES_USER=gaara_user
POSTGRES_PASSWORD=gaara_secure_2024_$(openssl rand -hex 8)
POSTGRES_PORT=5432

# ==========================================
# إعدادات Redis
# Redis Settings
# ==========================================
REDIS_PASSWORD=redis_secure_2024_$(openssl rand -hex 8)
REDIS_PORT=6379

# ==========================================
# إعدادات التطبيق الرئيسي
# Main Application Settings
# ==========================================
SECRET_KEY=gaara_secret_key_2024_$(openssl rand -hex 16)
DEBUG=false
APP_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443

# ==========================================
# إعدادات الأمان
# Security Settings
# ==========================================
JWT_SECRET=gaara_jwt_secret_2024_$(openssl rand -hex 16)
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==========================================
# إعدادات CORS
# CORS Settings
# ==========================================
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==========================================
# إعدادات السجلات
# Logging Settings
# ==========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/gaara_scan_ai.log

# ==========================================
# إعدادات الملفات
# File Settings
# ==========================================
UPLOAD_DIR=./data/uploads
RESULTS_DIR=./data/results
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp,tiff

# ==========================================
# إعدادات الأداء
# Performance Settings
# ==========================================
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30
KEEP_ALIVE=2

# ==========================================
# إعدادات التخزين المؤقت
# Cache Settings
# ==========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ==========================================
# إعدادات البريد الإلكتروني (اختياري)
# Email Settings (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# ==========================================
# إعدادات النسخ الاحتياطي
# Backup Settings
# ==========================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=true

# ==========================================
# إعدادات المراقبة
# Monitoring Settings
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ==========================================
# إعدادات التطوير
# Development Settings
# ==========================================
RELOAD=false
DEVELOPMENT_MODE=false

