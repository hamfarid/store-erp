# FILE: frontend/.env.example | PURPOSE: Frontend environment variables template | OWNER: Frontend Team | LAST-AUDITED: 2025-11-18
# Gaara AI Frontend - Environment Variables Template
# Copy this file to .env and update the values

# ==========================================
# API Configuration
# ==========================================
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# ==========================================
# Application Configuration
# ==========================================
VITE_APP_NAME=Gaara AI
VITE_APP_VERSION=3.0.0
VITE_APP_DESCRIPTION=Smart Agriculture System

# ==========================================
# Authentication
# ==========================================
VITE_AUTH_TOKEN_KEY=gaara_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=gaara_refresh_token
VITE_AUTH_TOKEN_EXPIRY=900000

# ==========================================
# Features Flags
# ==========================================
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# ==========================================
# Upload Configuration
# ==========================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# ==========================================
# Localization
# ==========================================
VITE_DEFAULT_LANGUAGE=ar
VITE_SUPPORTED_LANGUAGES=ar,en

# ==========================================
# Theme
# ==========================================
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# ==========================================
# External Services (Optional)
# ==========================================
VITE_GOOGLE_MAPS_API_KEY=
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=

