# ==========================================
# Gaara Scan AI v4.3.1 - Environment Variables
# Copy this file to .env and update with your values
# ==========================================

# ==========================================
# Application Settings
# ==========================================
ENVIRONMENT=production
DEBUG=false
APP_VERSION=4.3.1
TZ=UTC

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
POSTGRES_DB=gaara_scan_ai
POSTGRES_USER=gaara_user
POSTGRES_PASSWORD=change_this_secure_password_123
DB_PORT=5432

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=change_this_redis_password_123
REDIS_PORT=6379

# ==========================================
# Backend Configuration
# ==========================================
BACKEND_PORT=1005
APP_PORT=1005
WORKERS=4
LOG_LEVEL=info

# ==========================================
# Frontend Configuration
# ==========================================
FRONTEND_PORT=1505
VITE_API_URL=http://localhost:1005/api/v1
VITE_UPLOAD_URL=http://localhost:1005/uploads

# ==========================================
# Security Settings
# ==========================================
# IMPORTANT: Change these in production!
SECRET_KEY=change_this_secret_key_with_random_64_chars_minimum
JWT_SECRET=change_this_jwt_secret_with_random_64_chars_minimum
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=http://localhost:1505,http://localhost:3000,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=true

# ==========================================
# File Upload Settings
# ==========================================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# ==========================================
# Build Settings
# ==========================================
BUILD_DATE=2025-12-13
VCS_REF=latest

# ==========================================
# Database Migrations
# ==========================================
RUN_MIGRATIONS=true
