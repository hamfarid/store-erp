# ==========================================
# Environment Variables - Gaara Scan AI v4.3
# Copy this file to .env and update with your values
# ==========================================
#
# ⚠️  SECURITY NOTICE:
#     All variables marked [REQUIRED] MUST be set.
#     Generate secure secrets using:
#       openssl rand -hex 32
#     Or use Python:
#       python -c "import secrets; print(secrets.token_hex(32))"
#
# ==========================================

# ==========================================
# Application Settings
# ==========================================
APP_NAME=Gaara Scan AI
APP_VERSION=4.3.1
ENVIRONMENT=development
DEBUG=true
APP_PORT=4001
WORKERS=4

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
# [REQUIRED] Use a strong password! Generate with: openssl rand -hex 32
POSTGRES_DB=gaara_scan_ai
POSTGRES_USER=gaara_user
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_HOST=scan_ai-Manus-database
POSTGRES_PORT=8502

# Full DATABASE_URL (auto-constructed if not set)
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==========================================
# Redis Configuration
# ==========================================
# [REQUIRED] Use a strong password! Generate with: openssl rand -hex 32
REDIS_HOST=scan_ai-Manus-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
REDIS_DB=0

# ==========================================
# Security Settings [ALL REQUIRED]
# ==========================================
# [REQUIRED] Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# [REQUIRED] Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==========================================
# CORS Settings
# ==========================================
ALLOWED_ORIGINS=http://localhost:4501,http://localhost:4001,http://localhost:3000,http://localhost:80
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==========================================
# File Upload Settings
# ==========================================
UPLOAD_DIR=./data/uploads
RESULTS_DIR=./data/results
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp,tiff

# ==========================================
# Logging Settings
# ==========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/gaara_scan_ai.log

# ==========================================
# Performance Settings
# ==========================================
MAX_CONNECTIONS=1000
TIMEOUT=30
KEEP_ALIVE=2
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ==========================================
# Monitoring Settings
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ==========================================
# Email Settings (SMTP) - Optional
# ==========================================
EMAIL_PROVIDER=custom
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_USE_SSL=false
FROM_EMAIL=noreply@gaara-scan.ai
FROM_NAME=Gaara Scan AI

# ==========================================
# Rate Limiting Settings
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=200/minute
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REGISTER=3/hour
RATE_LIMIT_PASSWORD_RESET=3/hour

# ==========================================
# Frontend Settings (Vite)
# ==========================================
VITE_API_URL=http://localhost:4001/api
VITE_UPLOAD_URL=http://localhost:4001/uploads
VITE_APP_VERSION=4.3.1
VITE_APP_TITLE=نظام Gaara AI للزراعة الذكية

# ==========================================
# Docker Settings
# ==========================================
DATA_PATH=./data
DB_PORT=8502
BACKEND_PORT=4001
FRONTEND_PORT=4501
ML_SERVICE_PORT=4101
AI_SERVICE_PORT=4601

# ==========================================
# Monitoring Services (Optional)
# ==========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ==========================================
# ⚠️  CRITICAL SECURITY CHECKLIST:
# ==========================================
# Before deploying to production, ensure:
# [ ] POSTGRES_PASSWORD is a strong, unique password
# [ ] REDIS_PASSWORD is a strong, unique password
# [ ] SECRET_KEY is a random 64-character hex string
# [ ] JWT_SECRET is a random 64-character hex string
# [ ] GRAFANA_PASSWORD is changed from default
# [ ] This .env file is NOT committed to git
# [ ] File permissions are restricted (chmod 600 .env)
# ==========================================
